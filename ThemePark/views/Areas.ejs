<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Themed Areas</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <header>
      <div class="logo">
        <img src="/images/logo.png" alt="Theme Park Logo" />
      </div>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/areas">Areas</a></li>
          <li><a href="/rides">Rides</a></li>
          <li><a href="/faq">FAQ</a></li>
          <li><a href="/contact">Contact Us</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <h1>Themed Areas</h1>
      <section class="areas-list">
        <% areas.forEach(area => { %>
        <div class="area-item">
          <h2><%= area.name %></h2>
          <p><%= area.description %></p>
          <a href="/areas/<%= area.id %>">Learn More</a>
        </div>
        <% }); %>
      </section>
    </main>
    <footer>
      <p>&copy; 2024 Theme Park. All rights reserved.</p>
    </footer>
  </body>
</html>
