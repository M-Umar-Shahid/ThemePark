<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Themed Areas</title>
    <link rel="stylesheet" href="/styles/style.css">
  </head>
  <body>
    <header>
      <%- include('./component/navbar'); %>
    </header>
    <main>
      <h1>Themed Areas</h1>
      <section class="areas-list">
        <% areas.forEach(area => { %>
        <div class="area-item">
          <h2><%= area.name %></h2>
          <p><%= area.description %></p>
          <a href="/areas/<%= area.id %>">Learn More</a>
        </div>
        <% }); %>
      </section>
    </main>
    <footer>
      <p>&copy; 2024 Theme Park. All rights reserved.</p>
    </footer>
  </body>
</html>
