<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FAQ</title>
    <link rel="stylesheet" href="/styles/style.css">
  </head>
  <body>
    <header>
      <%- include('./component/navbar'); %>
    </header>
    <main>
      <h1>Frequently Asked Questions</h1>
      <section class="faq-list">
        <% faqs.forEach(faq => { %>
        <div class="faq-item">
          <h2><%= faq.question %></h2>
          <p><%= faq.answer %></p>
        </div>
        <% }); %>
      </section>
    </main>
    <footer>
      <p>&copy; 2024 Theme Park. All rights reserved.</p>
    </footer>
  </body>
</html>
